{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "outDir": "./dist",
        "moduleResolution": "NodeNext",
        "strict": true,
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["__tests__"]
}