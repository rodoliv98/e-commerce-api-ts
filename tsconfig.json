    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "outDir": "./dist",
        "moduleResolution": "NodeNext",
        "strict": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
